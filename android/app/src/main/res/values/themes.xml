<resources>
    <style name="Base.Theme.MessengerApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlActivated">@color/scarlet_primary</item>

    </style>

    <style name="Theme.MessengerApp" parent="Base.Theme.MessengerApp">
        <item name="android:fontFamily">@font/sfpro_regular</item>
        <item name="colorPrimary">@color/scarlet_primary</item>
        <item name="colorOnPrimary">@color/white_text</item>
        <item name="colorPrimaryContainer">@color/scarlet_container</item>
        <item name="colorOnPrimaryContainer">@color/on_scarlet_container</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>

        <!-- MD3 магия для BottomNav и других компонентов -->

        <!-- 1. Цвет активной "пилюли" в BottomNav -->
        <item name="colorSecondaryContainer">@color/scarlet_container</item>

        <!-- 2. Цвет иконки/текста внутри активной пилюли -->
        <item name="colorOnSecondaryContainer">@color/on_scarlet_container</item>
        <!-- 3. Цвет неактивных иконок и текста (сделаем нейтральным серым) -->
        <item name="colorOnSurfaceVariant">#757575</item>
        <!-- 4. Вторичный акцентный цвет (для чекбоксов, свичей и т.д.) -->
        <item name="colorSecondary">@color/scarlet_primary</item>
        <!-- Чтобы статус-бар соответствовал MD3 гайдам (обычно он светлый с темными иконками) -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>